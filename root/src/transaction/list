<style>
tr.selected {
	border: 2px solid ;
}
</style>

[% USE date %]
[% INCLUDE pager_head %]
<table summary="This table includes examples of as many table elements as possible">
<caption><b>List of Transactions</b></caption>
<colgroup>
	<col class="colA" />
	<col class="colB" />
	<col class="colC" />
	<col class="colD" />
	<col class="colE" />
		
</colgroup>
<thead>
	<tr>
		<th>Transaction No</th>
		<th>Date</th>
		<th>Security</th>
		<th>Type</th>
		<th>Amount</th>
	</tr>
</thead>
<tbody>
       
        [% total_amount = 0 %]
        
	    [% FOREACH row IN transaction_rs.serialize(4) %]
	
			[% to_date = row.transaction_date %]
			[% manip = date.manip %]
			[% transaction_date = manip.UnixDate(manip.ParseDate(to_date),'%d-%m-%Y') %]
		
			<tr>
				<td>[% row.transaction_no %]</td>
				<td>[% transaction_date %]</td>
				<td>[% row.product_id %]</td>
				<td>[% row.transaction_type %]</td>
				<td>[% row.total %]</td>     
			</tr>

			
			[% total_amount = total_amount + row.total %]
        
	
	     [% END %]
 	
</tbody>
<tfoot>
	<tr class="total">
		<th>Total</th>
		<td></td>
		<td></td>
		<td></td>
		<th class="currency">[% total_amount %]</th>
	</tr>
</tfoot>

</table>
